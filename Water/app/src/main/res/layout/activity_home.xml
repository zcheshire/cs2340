<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/gray"
    tools:context="com.gitrekt.water.controller.HomeActivity">

    <Button
        android:text="@string/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoutButton"
        android:onClick="logout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/teal"/>

    <TextView
        android:text="@string/login_successful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginMessage"
        android:layout_above="@+id/logoutButton"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />

    <Button
        android:text="@string/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginMessage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/mapButton"
        android:onClick="viewMap"
        android:background="@color/teal"/>

    <Button
        android:text="menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginMessage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/menuButton"
        android:onClick="goMenu"
        android:background="@color/teal"/>

    <Button
        android:text="@string/add_qp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/addQuality"
        android:onClick="viewQualityReport"
        android:background="@color/teal"/>


    <Button
        android:text="@string/add_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reportButton"
        android:onClick="createReport"
        android:background="@color/teal"
        android:layout_above="@+id/reportListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:text="@string/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsButton"
        android:onClick="settings"
        android:background="@color/teal"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/mapButton"
        android:layout_alignStart="@+id/mapButton"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />


    <Button
        android:text="@string/view_qp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewQualityReport"
        android:onClick="viewQualityReports"
        android:background="@color/teal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/reportButton"
        android:layout_alignBottom="@+id/reportButton" />

    <Button
        android:text="History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/history"
        android:background="@color/teal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/viewQualityReport"
        android:layout_toEndOf="@+id/viewQualityReport"
        android:layout_alignBottom="@+id/viewQualityReport"
        android:onClick="history" />

</RelativeLayout>
